<!--pages/news/news.wxml-->
<view class="news-list">
    <block wx:for="{{newsList}}" wx:key="index">
      <view class="news-item" bindtap="goToDetail" data-news="{{item}}">
      <text class="news-title">{{item.title}}</text>  
    </view>
    </block>
</view>
<!-- 固定底部导航栏 -->
<view class="tab-bar">
  <view class="tab-item" bindtap="onTabClick" data-page="index">
    <text>首页</text>
  </view>
  <view class="tab-item" bindtap="onTabClick" data-page="user">
    <text>我的</text>
  </view>
  <view class="tab-item" bindtap="onTabClick" data-page="news">
    <text>资讯</text>
  </view>
  <view class="tab-item" bindtap="onTabClick" data-page="search">
    <text>助手</text>
  </view>
</view>