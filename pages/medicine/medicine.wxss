.container {
    padding: 20px;
    background-color: #f9f9f9;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .knowledge {
    background-color: white;
    padding: 20px;
    margin-bottom: 20px;
  }
  
  .title {
    font-size: 24px;
    font-weight: bold;
  }
  
  .content {
    font-size: 16px;
    color: #333;
  }
  
  /* 未收藏时按钮样式 */
  .collect-btn-not-collected {
    background-color: #007aff;
    color: white;
    padding: 10px;
    border-radius: 5px;
    font-size: 16px;
  }
  
  /* 已收藏时按钮样式 */
  .collect-btn-collected {
    background-color: #ccc;
    color: white;
    padding: 10px;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .back-btn {
    background-color: #00ffaa;
    color: white;
    padding: 12px 24px;
    border-radius: 25px;
    font-size: 16px;
    margin-top: 10px;
  }
  