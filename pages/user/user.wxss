.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0) 70%), url('images/bg2.png');
  background-size: cover;
  background-position: center center;
  background-attachment: fixed;
  height: 100vh;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 50px;
}

.nickname {
  font-size: 18px;
  margin-top: 30px;
  text-align: center;
}
.nickname1 {
  font-size: 18px;
  font-weight: 500;
  left: 50%;       
  transform: translateX(-50%);
  bottom: 68%;
  position: fixed;
}
.login-btn, .logout-btn {

  padding: 10px;
  background-color: #00ffaa;
  color: white;
  border-radius: 5px;
  position:fixed;
  bottom: 40px;
  left: 50%;       
  transform: translateX(-50%);
}
