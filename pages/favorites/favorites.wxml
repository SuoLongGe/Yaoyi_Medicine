<view class="container">
  <!-- 固定的收藏标题栏 -->
  <view class="favorites-title">
    <text class="title">我的收藏</text>
  </view>

  <!-- 滚动区域：展示收藏项 -->
  <scroll-view class="favorites-list" scroll-y="true" bindscrolltolower="onReachBottom">
    <!-- 如果有收藏内容，展示收藏数据 -->
    <view wx:if="{{userFavorites.length > 0}}">
      <view wx:for="{{userFavorites}}" wx:key="index" class="favorite-item" bindtap="goToDetail" data-page-url="{{item.pageUrl}}">
        <view class="item-card">
          <text class="item-title">{{item.title}}</text>
          <text class="item-content">{{item.content}}</text>
        </view>
      </view>
    </view>
    <!-- 如果没有收藏内容，展示提示 -->
    <view wx:else>
      <text class="no-favorites">暂无收藏</text>
    </view>

    <!-- 加载更多提示 -->
    <view wx:if="{{hasMore}}">
      <text class="loading-more">正在加载更多...</text>
    </view>
  </scroll-view>
</view>
