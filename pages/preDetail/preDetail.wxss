/* pages/preDetail/preDetail.wxss */

.back-btn {
  position: absolute;
  bottom: 30rpx;
  left: 0rpx;
  width: 100% !important;  /* 强制固定宽度 */
  height: 30px !important; /* 强制设置高度 */
  padding: 0;  /* 去掉 padding */
  background-color: #519763;
  color: white;
  text-align: center;
  border-radius: 10rpx;
  font-size: 14px;
  line-height: 50px;
  overflow: hidden;
  margin-top: 0;
  margin-bottom: 35rpx;
  margin-left: 0;
  box-sizing: border-box;
  line-height: 30px;
  font-weight: bold;
}


.herb-detail {
  margin-top: 108px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
}

.herb-img {
  width: 100%;
  height: 200px;
  border-radius: 10px;
}

.herb-title {
  font-size: 24px;
  font-weight: bold;
  margin-top: 15px;
  color: #333;
}

.divider {
  width: 80%;
  height: 2px;
  background-color: #007AFF;
  margin: 15px 0;
}

.herb-desc {
  font-size: 16px;
  line-height: 1.8;
  color: #666;
  text-align: justify;
  padding: 0 10px;
}
