.herb-detail {
    height: 50%;
    margin-top: 108px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background-color: #f5f5f5;
    padding-bottom: 120rpx; /* 增加底部内边距，避免按钮被遮挡 */
  }
  
  .herb-img {
    width: 100%;
    height: 200px;
    border-radius: 10px;
  }
  
  .herb-title {
    font-size: 24px;
    font-weight: bold;
    margin-top: 15px;
    color: #333;
  }
  
  .divider {
    width: 80%;
    height: 2px;
    background-color: #007AFF;
    margin: 15px 0;
  }
  
  .herb-desc {
    font-size: 16px;
    line-height: 1.8;
    color: #666;
    text-align: justify;
    padding: 0 10px;
  }
  
  /* 收藏按钮基础样式 */
  .collect-btn {
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 16px;
    margin-top: 20px;
    border: none;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  /* 未收藏时按钮样式 */
  .collect-btn-not-collected {
    background-color: #007aff;
  }
  
  /* 已收藏时按钮样式 */
  .collect-btn-collected {
    background-color: #ccc;
  }
  