<view class="container">

<!-- 自定义导航栏 -->
<navigation-bar title="瑶医药典"></navigation-bar>

  <view class="header">
    <uni-icons type="search" size="30"></uni-icons>
    <button class="search-box" bindtap="goToSearch"> 🔍搜索药方/资讯</button>
  </view>

  <swiper autoplay="true" interval="3000" circular="true">
  <block wx:for="{{swiperList}}" wx:key="id">
    <swiper-item>
      <image src="{{item.imgUrl}}" class="swiper-img" mode="aspectFill"></image>
    </swiper-item>
  </block>
</swiper>

<view class="section-buttons">
  <button class="tab-btn" bindtap="goToInternal" data-page="internal">内服</button>
  <button class="tab-btn" bindtap="goToExternal" data-page="external">外用</button>
</view>

<view class="herb-list">
    <block wx:for="{{herbList}}" wx:key="id">
      <view class="herb-item" bindtap="goToHerbDetail" data-id="{{item.id}}">
        <image class="herb-img" src="{{item.img}}" mode="aspectFill"></image>
        <view class="herb-text">
          <text class="herb-name">{{item.name}}</text>
        </view>
      </view>
      <view class="divider"></view> <!-- 蓝色分割线 -->
    </block>
  </view>

</view>