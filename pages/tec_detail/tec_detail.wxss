.container {
    padding: 20rpx;
  }
  
  .section {
    margin-bottom: 12px;
  }
  
  .label {
    font-size: 20px;
    font-weight: bold;
  }
  
  .name {
    font-size: 28px;
    font-weight: bold;
    text-align: center;
    color: rgb(8, 107, 46);
  }
  
  .label {
    font-weight: bold;
    font-size: 20px;
    margin-bottom: 5px; /* 添加间距 */
  }
  
  .brief{
    font-size: 15px;
    line-height: 1.3; /* 增加行间距 */
  }
  
  .content {
    font-size: 18px;
    line-height: 1.5; /* 增加行间距 */
    font-weight: 1000;
    color: #333;
    white-space: pre-wrap;
  }
  
  .divider {
    width: 100%;
    height: 2px;
    background-color: #289662;
    margin: 15px 0;
  }
  
  /* 收藏按钮样式 */
  .card {
    background-color: #289662;
    padding: 15rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    text-align: center;
  }
  
  .favorite-text {
    color: white;
    font-size: 18px;
    font-weight: bold;
  }
  